.row
  .small-12.columns
    = form_tag signin_path do
      .row
        .large-6.columns
          = text_field_tag :email, nil, placeholder: "Email address"
        .large-6.columns
          = password_field_tag :password, nil, placeholder: "Password"

      .text-center
        = submit_tag "Sign in", class: "button success"
