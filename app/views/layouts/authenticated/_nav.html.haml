%nav.top-bar{ "data-topbar" => "", role: "navigation" }
  %ul.title-area
    %li.name
      %h1
        = link_to "Notable", "#"

    %li.toggle-topbar.menu-icon
      = link_to "#" do
        %span Menu
  
  %section.top-bar-section
    %ul.right
      %li.has-dropdown
        = link_to "#", class: "user-email" do
          = gravatar(current_user.email, size: 32)
          = current_user.email

        %ul.dropdown
          %li
            = link_to "Profile", "#"
          %li
            = link_to  "Logout", signout_path, method: :delete, data: { confirm: "Signout?" }
